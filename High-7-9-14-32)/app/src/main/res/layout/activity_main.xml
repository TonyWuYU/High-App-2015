<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <android.support.v4.widget.DrawerLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/drawer_layout">
            <LinearLayout
                android:background="@drawable/beijing"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/mainContainer"
                    android:layout_weight="1">
                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </android.support.v4.view.ViewPager>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/down"
                    android:layout_weight="4"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_weight="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/imgMyClock"
                            android:src="@drawable/redalarm"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/txtMyClock"
                            android:text="闹钟"
                            android:layout_gravity="center_horizontal"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_weight="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/imgSquare"
                            android:src="@drawable/squar"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/txtSquare"
                            android:text="起来high"
                            android:layout_gravity="center_horizontal"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_weight="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/imgmyFriend"
                            android:src="@drawable/mymessage"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/txtMyFriend"
                            android:text="消息"
                            android:layout_gravity="center_horizontal"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/myinfo"
                android:layout_gravity="start">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.xueba.quting.high.RoundImageView
                        android:id="@+id/imgHead"
                        android:layout_height="60dp"
                        android:layout_width="60dp"
                        >
                    </com.xueba.quting.high.RoundImageView>
                    <TextView
                        android:id="@+id/txtName"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="但，世界都沉默"
                        android:textSize="23sp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgEdit"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/editsign"/>
                    <EditText
                        android:id="@+id/txtSign"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="编辑个性签名"
                        android:textSize="10sp"
                        android:background="@null"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgRing"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/myrecord"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/txtRing"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="我的录音"
                        android:textSize="20sp"
                        android:clickable="true"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgFriend"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/myfriends"/>
                    <TextView
                        android:id="@+id/txtFriend"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="我的好友"
                        android:textSize="20sp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgAccountSetting"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/setting"
                        />
                    <TextView
                        android:id="@+id/txtAccountSetting"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="注销"
                        android:textSize="20sp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgAbout"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/about"/>
                    <TextView
                        android:id="@+id/txtAbout"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="关于"
                        android:textSize="20sp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
