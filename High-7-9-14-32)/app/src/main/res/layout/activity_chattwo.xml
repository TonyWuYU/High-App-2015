<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/chat_title"
        android:layout_weight="0.5"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:background="#5A82D8">
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/back"
            android:id="@+id/ivBack"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
           android:id="@+id/chat_contact_name"
            android:text="正在聊天"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:fontFamily="sans-serif-condensed"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/ivconfirm"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <ListView
        android:id="@+id/chat_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="23"
        android:layout_below="@+id/chat_title"
        android:layout_above="@+id/chat_bottom_linear"
        android:fadingEdge="none"

        android:divider="#aaaaaa"
        android:dividerHeight="0px">
    </ListView>
    <LinearLayout
        android:id="@+id/chat_bottom_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="3dip"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="20dp" >
        <EditText
            android:id="@+id/chat_bottom_edittext"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/boder"/>
        <Button
            android:id="@+id/chat_bottom_sendbutton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="发送"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="25dp"
            />
    </LinearLayout>
</LinearLayout>

